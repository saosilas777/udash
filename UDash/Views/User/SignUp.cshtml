@model UserModel
@{
	Layout = "_LayoutOffLine";
	ViewData["Title"] = "Cadastro";
}
<div class="container">
    <div class="loginContainer">
        <div class="loginHeader">
            <div class="loginHeader_content">
                <h1>Sign in</h1>
                <div class="loginHeader_icons">
                    <i class="fa-brands fa-facebook"></i>
                    <i class="fa-brands fa-google"></i>
                    <i class="fa-brands fa-instagram"></i>
                </div>

            </div>
        </div>
        <div class="loginForm signForm">
            <form class="loginForm_content" asp-controller="User" asp-action="Create" method="post">
                <label for="FirstName">
                    <input type="text" asp-for="FirstName" id="inputLogin" placeholder="Primeiro Nome">
                </label>
                <label for="LastName">
                    <input type="text" asp-for="LastName" id="inputLogin" placeholder="Sobrenome">
                </label>
                <label for="Email">
                    <input type="email" class="signEmail" asp-for="Email" id="inputLogin" placeholder="E=mail">
                </label>
                <label for="login">
                    <input type="text" asp-for="Login.Login" id="inputLogin" placeholder="Login">
                </label>
                <label for="password">
                    <input type="password" asp-for="Login.Password" id="inputPwd" placeholder="Senha">
                </label>
                <label for="submit">
                    <input type="submit" value="Login" name="submit" id="inputSubmit">
                </label>
            </form>
        </div>
    </div>
    <footer class="login_footer">
        <p>Development by &copy; <span>U.code</span></p>
    </footer>
</div>
<script src="/login.js"></script>

