@model List<CustomerModel>


<div class="main">
	@await Component.InvokeAsync("Header")
	<div class="envio-arquivos">
		<div class="arquivos_title">
			<span>Faça o upload de sua planilha <b class="excel">excel</b> aqui!</span>
		</div>
		
		<form asp-action="SendFile" asp-controller="SendFile" method="post" enctype="multipart/form-data">
			<label for="btn-send-file" class="btn btn-primary input-file col-md-2 text-center">Procurar Arquivo</label>
			<input id="btn-send-file" class="btn btn-success input-file col-md-2 text-center" name="uploadFile" type="file" multiple hidden />
			<button class="col-md-2 input-file-btn" type="submit">Enviar</button>
		</form>
	</div>
	<section id="table_row">
		<!-- <table id="myTable2" class="table_Securytis"> -->
		<div class="card">
			<div class="card_header">
				<div class="table_float">Customers</div>
			</div>
			<div class="card_body">
				<table id="myTable" class="myTable">
					<thead>
						<tr>
							<th class="thead_id">
								Id Sens.
							</th>
							<th>
								Id Starford
							</th>
							<th>
								CNPJ/CPF <br>
								Razão Social
							</th>
							<th>
								Status
							</th>
							<th>
								Loja
							</th>
							<th>
								Cliente
							</th>
							<th>
								Produto Fiscal
							</th>
							<th>
								FR
							</th>
							<th>
								Valor
							</th>
							<th>
								Ações
							</th>
						</tr>
					</thead>
					<tbody id="tbody">
						@foreach (var item in Model)
						{
							<tr>
								<td>
									<p class="thead_id">@item.IdSense</p>
								</td>
								<td>

									<p class="thead_id "><a class="btnClick" asp-controller="Customer" asp-action="TodasAsContas" asp-route-id="@item.Id">@item.IdStarford</a></p>

								</td>
								<td>
									<div class="razao">
										<p>
											@item.RazaoSocial
										</p>
										<p>
											@item.Cnpj
										</p>
									</div>
								</td>
								<td class="td_status">

									@if (item.Status == true)
									{
										<p class="status">
											Ativos
										</p>
									}
									else
									{
										<p class="status status_inactive">
											Inativos
										</p>
									}
								</td>
								<td>
									<p>@item.Loja</p>
								</td>
								<td>
									<p>@item.Cliente</p>
								</td>
								<td>
									<p>@item.ProdutoFiscal</p>
								</td>
								<td>
									<p>@item.Fr</p>
								</td>
								<td>
									<p>@item.ValorMensal.ToString("F2")</p>
								</td>
								<td class="btnClick">
									<a asp-action="Editar" asp-controller="Customer" asp-route-id="@item.Id" class="table_actions">Editar/Deletar</a>
								</td>
							</tr>
						}
					</tbody>
				</table>

			</div>
		</div>
	</section>
</div>
	<footer class="footer">
		<p> &copy; <a href="#">U.Code</a> development</p>
		<p class="footer_link">Visite nosso site <a href="#">U.code</a> </p>
	</footer>
