@model UDash.Models.ViewModels.SendEmailModel
@{
	Layout = "_LayoutOffLine";
	ViewData["Title"] = "Esqueci minha senha!";
}
@if (TempData["ErrorMessage"] != null)
{
	<div class="alert alert-danger" role="alert">
		<button type="button" class="btn btn-danger btn-sm close-alert" arial-lable="Close" hidden>X</button>
		@TempData["ErrorMessage"]
	</div>

}
<div class="container">
	<div class="loginContainer">
		<div class="loginHeader">
			<div class="loginHeader_content">
				<h1>@ViewData["Title"]</h1>
				<div class="loginHeader_icons">
					<i class="fa-brands fa-google"></i>
					<i class="fa-brands fa-instagram"></i>
					<i class="fa-brands fa-facebook"></i>
				</div>

			</div>

		</div>
		<div class="loginForm signForm forgotFrom">
			<form class="loginForm_content" asp-controller="Login" asp-action="SendMail" method="post">
				<label for="Email" class="grid_span2">
					<input class="emailForgot" type="email" asp-for="Email" placeholder="email@mail.com">
					@Html.ValidationMessageFor(x => x.Email)
				</label>
				<label for="backPage" class="grid_span2 backButton">
					<a id="backPage" class="inputButton" asp-controller="Login" asp-action="Login">Voltar</a>
				</label>
				<label for="submit" class="grid_span2">
					<input type="submit" value="Enviar" class="inputButton">
				</label>
			</form>
				<p class="grid_span2">Seus dados estarão seguros conosco <a href="#">U.Code.</a></p>
		</div>
	</div>
	<footer class="login_footer">
		<p>Development by &copy; <span>U.code</span></p>
	</footer>
</div>


